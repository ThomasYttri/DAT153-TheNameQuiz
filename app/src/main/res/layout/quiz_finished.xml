<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/endScreenTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="@string/end_of_quiz"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/endScoreText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="@string/your_final_score_was"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/endScoreValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/_10_10"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/endQuizHomeButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/middle_blue"
            android:text="@string/home" />

        <Button
            android:id="@+id/endQuizNewQuiz"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/middle_blue"
            android:text="@string/new_quiz" />
    </LinearLayout>

</LinearLayout>